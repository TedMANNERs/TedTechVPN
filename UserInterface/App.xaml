<Application x:Class="UserInterface.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:namespace="clr-namespace:UserInterface"
             xmlns:viewModels="clr-namespace:UserInterface.ViewModels"
             StartupUri="MainView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:AppViewModel}">
            <namespace:AppView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <namespace:LoginView/>
        </DataTemplate>
    </Application.Resources>
</Application>
